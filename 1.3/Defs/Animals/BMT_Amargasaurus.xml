<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="AnimalThingBase">
        <defName>BMT_Amargasaurus</defName>
        <label>amargasaurus</label>
        <description>Relatively small and with a short neck for a sauropod, Amargasaurus had multiple pairs of spines along its neck. Each of the spines is coated in a keratinous sheath, like the horns of an ibex.\n\nWhile not the easiest animals to manage, their impressive appearance means they command a high price.\n\nScientific Name: Amargasaurus cazaui</description>
        <statBases>
            <MoveSpeed>5</MoveSpeed>
            <MarketValue>1220</MarketValue>
            <ComfyTemperatureMin>-10</ComfyTemperatureMin>
            <ComfyTemperatureMax>45</ComfyTemperatureMax>
            <FilthRate>16</FilthRate>
        </statBases>
        <race>
            <useMeatFrom>BMT_Brachiosaurus</useMeatFrom>
            <body>QuadrupedAnimalWithPawsAndTail</body>
            <leatherDef>BMT_DinoHideHeavy</leatherDef>
            <herdAnimal>false</herdAnimal>
            <baseBodySize>3.5</baseBodySize>
            <baseHealthScale>2.25</baseHealthScale>
            <baseHungerRate>0.535</baseHungerRate>
            <foodType>VegetarianRoughAnimal, DendrovoreAnimal</foodType>
			<willNeverEat>
				<li MayRequire="Ludeon.RimWorld.Royalty">Plant_TreeAnima</li>
				<li MayRequire="Ludeon.RimWorld.Ideology">Plant_TreeGauranlen</li>
			</willNeverEat>
            <predator>false</predator>
            <wildness>0.70</wildness>
            <roamMtbDays>2</roamMtbDays>	  
            <lifeExpectancy>90</lifeExpectancy>
            <manhunterOnTameFailChance>0.50</manhunterOnTameFailChance>
            <manhunterOnDamageChance>0.50</manhunterOnDamageChance>
            <trainability>None</trainability>
            <lifeStageAges>
                <li>
                    <def>AnimalBabyTiny</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>1.5</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>3.0</minAge>
                    <soundWounded>BMT_Amargasaurus_Wounded</soundWounded>
                    <soundDeath>BMT_Amargasaurus_Death</soundDeath>
                    <soundCall>BMT_Amargasaurus_Call</soundCall>
                    <soundAngry>BMT_Amargasaurus_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
        </race>
        <comps>
            <li Class="CompProperties_EggLayer">
                <eggFertilizedDef>BMT_AmargasaurusEggFertilized</eggFertilizedDef>
                <eggFertilizationCountMax>1</eggFertilizationCountMax>
                <eggLayIntervalDays>45</eggLayIntervalDays>
                <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
                <eggCountRange>1~1</eggCountRange>
            </li>
        </comps>
        <tools>
            <li>
                <label>front left foot</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>15</power>
                <cooldownTime>1.5</cooldownTime>
                <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
            </li>
            <li>
                <label>front right foot</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>15</power>
                <cooldownTime>1.5</cooldownTime>
                <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
            </li>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>18</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.7</chanceFactor>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>25</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        <tradeTags>
            <li>AnimalUncommon</li>
        </tradeTags>
    </ThingDef>

