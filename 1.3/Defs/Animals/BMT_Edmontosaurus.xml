<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="AnimalThingBase">
        <defName>BMT_Edmontosaurus</defName>
        <label>edmontosaurus</label>
        <description>The term “duck-billed dinosaur” was originally coined for this species thanks to its long jaws that flare outward, allowing it to gather large mouthfuls of vegetation at once. Unlike many other hadrosaurs, it lacked a head crest.\n\nScienfitic name: Edmontosaurus regalis</description>
        <statBases>
            <MoveSpeed>3.7</MoveSpeed>
            <MarketValue>180</MarketValue>
            <ComfyTemperatureMin>-40</ComfyTemperatureMin>
            <ComfyTemperatureMax>50</ComfyTemperatureMax>
        </statBases>
        <race>
            <useMeatFrom>BMT_Iguanodon</useMeatFrom>
            <body>BMT_BipedWithClawsTeethAndTail</body>
            <leatherDef>BMT_DinoHideThin</leatherDef>
            <herdAnimal>true</herdAnimal>
            <baseBodySize>3.0</baseBodySize>
            <baseHealthScale>1.9</baseHealthScale>
            <baseHungerRate>0.6</baseHungerRate>
            <packAnimal>true</packAnimal>
			<roamMtbDays>2.6</roamMtbDays>
            <foodType>VegetarianRoughAnimal, DendrovoreAnimal</foodType>
			<willNeverEat>
				<li MayRequire="Ludeon.RimWorld.Royalty">Plant_TreeAnima</li>
				<li MayRequire="Ludeon.RimWorld.Ideology">Plant_TreeGauranlen</li>
			</willNeverEat>
            <predator>false</predator>
            <wildness>0.15</wildness>
            <lifeExpectancy>20</lifeExpectancy>
            <manhunterOnTameFailChance>0.05</manhunterOnTameFailChance>
            <manhunterOnDamageChance>0.15</manhunterOnDamageChance>
            <trainability>None</trainability>
            <ageGenerationCurve>
                <points>
                    <li>(0.0,0)</li>
                    <li>(0.05,350)</li>
                    <li>(0.40,150)</li>
                    <li>(1.0,5)</li>
                    <li>(30,0)</li>
                </points>
            </ageGenerationCurve>
            <lifeStageAges>
                <li>
                    <def>AnimalBabyTiny</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.24</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0.49</minAge>
                    <soundWounded>BMT_Dryosaurus_Wounded</soundWounded>
                    <soundDeath>BMT_Dryosaurus_Death</soundDeath>
                    <soundCall>BMT_Dryosaurus_Call</soundCall>
                    <soundAngry>BMT_Dryosaurus_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
        </race>
        <comps>
            <li Class="CompProperties_EggLayer">
                <eggFertilizedDef>BMT_EdmontosaurusEggFertilized</eggFertilizedDef>
                <eggFertilizationCountMax>8</eggFertilizationCountMax>
                <eggLayIntervalDays>7</eggLayIntervalDays>
                <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
                <eggCountRange>2~4</eggCountRange>
            </li>
        </comps>
        <tools>
            <li>
                <label>left claw</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>8</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>BMT_FrontLeftClaws</linkedBodyPartsGroup>
            </li>
            <li>
                <label>right claw</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>8</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>BMT_FrontRightClaws</linkedBodyPartsGroup>
            </li>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.7</chanceFactor>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>10</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        <tradeTags>
            <li>AnimalCommon</li>
        </tradeTags>
    </ThingDef>

