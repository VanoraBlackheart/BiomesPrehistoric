            <baseBodySize>2.8</baseBodySize>
            <baseHealthScale>3.0</baseHealthScale>
            <baseHungerRate>0.25</baseHungerRate>
            <foodType>CarnivoreAnimal</foodType>
            <predator>true</predator>
            <maxPreyBodySize>2.5</maxPreyBodySize>
