<Defs>

    <ThingDef ParentName="AnimalThingBase">
        <defName>BMT_Yutyrannus</defName>
        <label>yutyrannus</label>
        <description>A large feathered tyrannosaur that lived in colder climates. It was one of the few predators in its environment to have hunted sauropods, with some even having likely died doing so. It had a flat tongue like a crocodile. \n\nScientific name: Yutyrannus huali</description>
        <statBases>
            <MoveSpeed>5.5</MoveSpeed>
            <MarketValue>2000</MarketValue>
            <ComfyTemperatureMin>-40</ComfyTemperatureMin>
            <ComfyTemperatureMax>50</ComfyTemperatureMax>
            <ArmorRating_Sharp>0.25</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.15</ArmorRating_Blunt>
        </statBases>
        <race>
            <useMeatFrom>BMT_Velociraptor</useMeatFrom>
            <body>BMT_BipedWithClawsTeethAndTail</body>
            <leatherDef>BMT_DinoHideHeavy</leatherDef>
            <herdAnimal>true</herdAnimal>
            <baseBodySize>3.6</baseBodySize>
            <baseHealthScale>3.0</baseHealthScale>
            <baseHungerRate>0.80</baseHungerRate>
            <foodType>CarnivoreAnimalStrict, OvivoreAnimal</foodType>
            <predator>true</predator>
            <maxPreyBodySize>3.5</maxPreyBodySize>
            <wildness>0.80</wildness>
            <lifeExpectancy>20</lifeExpectancy>
            <manhunterOnTameFailChance>0.60</manhunterOnTameFailChance>
            <manhunterOnDamageChance>0.70</manhunterOnDamageChance>
            <trainability>Advanced</trainability>
            <ageGenerationCurve>
                <points>
                    <li>(0.0,0)</li>
                    <li>(0.1,350)</li>
                    <li>(0.9,150)</li>
                    <li>(1.5,5)</li>
                    <li>(20,4)</li>
                    <li>(65,0)</li>
                </points>
            </ageGenerationCurve>
            <lifeStageAges>
                <li>
                    <def>AnimalBabyTiny</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.8</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>1.3</minAge>
                    <soundWounded>BMT_TRex_Wounded</soundWounded>
                    <soundDeath>BMT_TRex_Death</soundDeath>
                    <soundCall>BMT_TRex_Call</soundCall>
                    <soundAngry>BMT_TRex_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
        </race>
        <comps>
            <li Class="CompProperties_Shearable">
                <woolDef>BMT_DinoHideFeathery</woolDef>
                <shearIntervalDays>15</shearIntervalDays>
                <woolAmount>75</woolAmount>
            </li>
            <li Class="CompProperties_EggLayer">
                <eggFertilizedDef>BMT_YutyrannusEggFertilized</eggFertilizedDef>
                <eggFertilizationCountMax>1</eggFertilizationCountMax>
                <eggLayIntervalDays>10</eggLayIntervalDays>
                <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
                <eggCountRange>1~1</eggCountRange>
            </li>
        </comps>
        <tools>
            <li>
                <label>left claws</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>14</power>
                <cooldownTime>1.7</cooldownTime>
                <linkedBodyPartsGroup>FrontLeftClaws</linkedBodyPartsGroup>
            </li>
            <li>
                <label>right claws</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>14</power>
                <cooldownTime>1.7</cooldownTime>
                <linkedBodyPartsGroup>FrontRightClaws</linkedBodyPartsGroup>
            </li>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>30</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.7</chanceFactor>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>14</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        <tradeTags>
            <li>AnimalFighter</li>
            <li>AnimalUncommon</li>
        </tradeTags>
