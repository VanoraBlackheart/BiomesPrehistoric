<?xml version="1.0" encoding="utf-8" ?>
<Defs>



  <ThingDef ParentName="AnimalThingBase">
    <defName>BMT_Compsognathus</defName>
    <label>compsognathus</label>
    <description>Compsognathus also known as compy is a diminutive theropod, and one of the smallest dinosaur species. These tiny predators can run amazingly fast.\n\nScientific name: Compsognathus longipes</description>
    <statBases>
      <MoveSpeed>6.6</MoveSpeed>
      <MarketValue>560</MarketValue>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
      <ComfyTemperatureMax>55</ComfyTemperatureMax>
      <FilthRate>6</FilthRate>		  
    </statBases>

    <race>
      <useMeatFrom>BMT_Velociraptor</useMeatFrom>
	  <petness>1</petness>
	  <body>BMT_BipedWithClawsTeethAndTail</body>
      <leatherDef>BMT_DinoHideThin</leatherDef>
      <herdAnimal>false</herdAnimal>
      <baseBodySize>0.13</baseBodySize>
      <baseHealthScale>0.38</baseHealthScale>
      <baseHungerRate>0.30</baseHungerRate>
      <foodType>CarnivoreAnimal</foodType>
	  <predator>true</predator>
      <maxPreyBodySize>0.3</maxPreyBodySize>
      <wildness>0.10</wildness>
      <lifeExpectancy>8</lifeExpectancy>
      <manhunterOnTameFailChance>0.01</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.01</manhunterOnDamageChance>
	  <nuzzleMtbHours>6</nuzzleMtbHours>
	  <nameOnTameChance>1</nameOnTameChance>
      <trainability>Intermediate</trainability>
	   
	  <lifeStageAges>
        <li>
          <def>AnimalBabyTiny</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.11</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.25</minAge>
          <soundWounded>Pawn_CuteDino_Angry</soundWounded>
          <soundDeath>Pawn_CuteDino_Death</soundDeath>
          <soundCall>Pawn_CuteDino_Call</soundCall>
          <soundAngry>Pawn_CuteDino_Angry</soundAngry>
        </li>
      </lifeStageAges>
	  <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <comps>
	 
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>BMT_CompsognathusEggFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>5</eggFertilizationCountMax>
        <eggLayIntervalDays>10</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1~5</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1.3</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftClaws</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1.3</cooldownTime>
        <linkedBodyPartsGroup>FrontRightClaws</linkedBodyPartsGroup>
      </li>
     <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <tradeTags>
	   <li>AnimalUncommon</li>
	   <li>AnimalPet</li>
    </tradeTags>
  </ThingDef>

