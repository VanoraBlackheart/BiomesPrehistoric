            <foodType>CarnivoreAnimalStrict</foodType>
            <predator>true</predator>
            <maxPreyBodySize>3</maxPreyBodySize>
            <wildness>0.70</wildness>
            <roamMtbDays>2.5</roamMtbDays>
            <lifeExpectancy>75</lifeExpectancy>
            <manhunterOnTameFailChance>0.45</manhunterOnTameFailChance>
            <manhunterOnDamageChance>0.90</manhunterOnDamageChance>
            <trainability>None</trainability>
            <lifeStageAges>
