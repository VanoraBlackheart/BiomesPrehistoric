<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="AnimalThingBase">
        <defName>BMT_TRex</defName>
        <label>tyrannosaurus</label>
        <description>Known as the “Tyrant Lizard”, it was a very large predatory dinosaur that was widespread throughout North America. It had an extremely powerful bite force. Worn tooth tips and bone fragments in their feces indicated that they commonly crushed and swallowed bones.\n\nScientific name: Tyrannosaurus Rex</description>
        <statBases>
            <MoveSpeed>5.5</MoveSpeed>
            <MarketValue>2500</MarketValue>
            <ComfyTemperatureMin>-40</ComfyTemperatureMin>
            <ComfyTemperatureMax>50</ComfyTemperatureMax>
            <ArmorRating_Sharp>0.30</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.20</ArmorRating_Blunt>
        </statBases>
        <race>
			<nameGenerator>BMT_NamerDino</nameGenerator>
            <useMeatFrom>BMT_Velociraptor</useMeatFrom>
            <body>BMT_BipedWithClawsTeethAndTailTwoDH</body>
            <leatherDef>BMT_DinoHideHeavy</leatherDef>
            <herdAnimal>true</herdAnimal>
            <baseBodySize>7</baseBodySize>
            <baseHealthScale>4.5</baseHealthScale>
            <baseHungerRate>0.60</baseHungerRate>
            <foodType>CarnivoreAnimalStrict, OvivoreAnimal</foodType>
            <predator>true</predator>
            <maxPreyBodySize>5</maxPreyBodySize>
            <wildness>0.85</wildness>
            <lifeExpectancy>20</lifeExpectancy>
            <manhunterOnTameFailChance>0.70</manhunterOnTameFailChance>
            <manhunterOnDamageChance>0.70</manhunterOnDamageChance>
            <trainability>Advanced</trainability>
            <lifeStageAges>
                <li>
                    <def>AnimalBabyTiny</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.6</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>1.3</minAge>
                    <soundWounded>BMT_TRex_Wounded</soundWounded>
                    <soundDeath>BMT_TRex_Death</soundDeath>
                    <soundCall>BMT_TRex_Call</soundCall>
                    <soundAngry>BMT_TRex_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
        </race>
        <comps>
            <li Class="CompProperties_EggLayer">
                <eggFertilizedDef>BMT_TRexEggFertilized</eggFertilizedDef>
                <eggFertilizationCountMax>4</eggFertilizationCountMax>
                <eggLayIntervalDays>12</eggLayIntervalDays>
                <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
                <eggCountRange>1~2</eggCountRange>
            </li>
        </comps>
        <tools>
            <li>
                <label>left claws</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>16</power>
                <cooldownTime>1.7</cooldownTime>
                <linkedBodyPartsGroup>BMT_FrontLeftClaws</linkedBodyPartsGroup>
            </li>
            <li>
                <label>right claws</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>16</power>
                <cooldownTime>1.7</cooldownTime>
                <linkedBodyPartsGroup>BMT_FrontRightClaws</linkedBodyPartsGroup>
            </li>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>32</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.7</chanceFactor>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>14</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        <tradeTags>
            <li>AnimalFighter</li>
            <li>AnimalUncommon</li>
        </tradeTags>
    </ThingDef>

