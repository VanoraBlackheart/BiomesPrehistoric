<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="AnimalThingBase">
        <defName>BMT_Allosaurus</defName>
        <label>allosaurus</label>
        <description>The loosely jointed jaws of Allosaurus allowed it to open its jaws extremely wide, similar to snakes. Unlike Tyrannosaurus, they did not crush bone and instead tore away chunks of flesh as they attacked.\n\nScientific name: Allosaurus fragilis</description>
        <statBases>
            <MoveSpeed>5.5</MoveSpeed>
            <MarketValue>1500</MarketValue>
            <ComfyTemperatureMin>-10</ComfyTemperatureMin>
            <ComfyTemperatureMax>70</ComfyTemperatureMax>
            <ArmorRating_Sharp>0.20</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.12</ArmorRating_Blunt>
        </statBases>
        <race>
            <useMeatFrom>BMT_Velociraptor</useMeatFrom>
            <body>BMT_BipedWithClawsTeethAndTail</body>
            <leatherDef>BMT_DinoHideHeavy</leatherDef>
            <herdAnimal>true</herdAnimal>
            <baseBodySize>4</baseBodySize>
            <baseHealthScale>2.5</baseHealthScale>
            <baseHungerRate>0.45</baseHungerRate>
            <foodType>CarnivoreAnimalStrict, OvivoreAnimal</foodType>
            <predator>true</predator>
            <maxPreyBodySize>1.8</maxPreyBodySize>
            <wildness>0.75</wildness>
            <lifeExpectancy>20</lifeExpectancy>
            <manhunterOnTameFailChance>0.50</manhunterOnTameFailChance>
            <manhunterOnDamageChance>0.50</manhunterOnDamageChance>
            <trainability>Advanced</trainability>
            <lifeStageAges>
                <li>
                    <def>AnimalBabyTiny</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.6</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>1.3</minAge>
                    <soundWounded>BMT_TRex_Wounded</soundWounded>
                    <soundDeath>BMT_TRex_Death</soundDeath>
                    <soundCall>BMT_TRex_Call</soundCall>
                    <soundAngry>BMT_TRex_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
        </race>
        <comps>
            <li Class="CompProperties_EggLayer">
                <eggFertilizedDef>BMT_AllosaurusEggFertilized</eggFertilizedDef>
                <eggFertilizationCountMax>1</eggFertilizationCountMax>
                <eggLayIntervalDays>12</eggLayIntervalDays>
                <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
                <eggCountRange>1~1</eggCountRange>
            </li>
        </comps>
        <tools>
            <li>
                <label>front left claws</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>12</power>
                <cooldownTime>1.7</cooldownTime>
                <linkedBodyPartsGroup>BMT_FrontLeftClaws</linkedBodyPartsGroup>
            </li>
            <li>
                <label>front right claws</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>12</power>
                <cooldownTime>1.7</cooldownTime>
                <linkedBodyPartsGroup>BMT_FrontRightClaws</linkedBodyPartsGroup>
            </li>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>26</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.7</chanceFactor>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>10</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        <tradeTags>
            <li>AnimalFighter</li>
            <li>AnimalUncommon</li>
        </tradeTags>
    </ThingDef>

