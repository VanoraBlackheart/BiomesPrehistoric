            <wildness>0.35</wildness>
            <lifeExpectancy>10</lifeExpectancy>
            <manhunterOnTameFailChance>0.25</manhunterOnTameFailChance>
            <manhunterOnDamageChance>0.25</manhunterOnDamageChance>
            <nuzzleMtbHours>12</nuzzleMtbHours>
            <nameOnTameChance>1</nameOnTameChance>
            <trainability>Advanced</trainability>
            <ageGenerationCurve>
                <points>
                    <li>(0.0,0)</li>
                    <li>(0.1,350)</li>
                    <li>(0.9,150)</li>
                    <li>(1.5,2)</li>
                    <li>(20,2)</li>
                    <li>(65,0)</li>
                </points>
            </ageGenerationCurve>
            <lifeStageAges>
                <li>
                    <def>AnimalBabyTiny</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.2</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0.4</minAge>
                    <soundWounded>BMT_Compsognathus_Wounded</soundWounded>
                    <soundDeath>BMT_Compsognathus_Death</soundDeath>
                    <soundCall>BMT_Compsognathus_Call</soundCall>
                    <soundAngry>BMT_Compsognathus_Angry</soundAngry>
