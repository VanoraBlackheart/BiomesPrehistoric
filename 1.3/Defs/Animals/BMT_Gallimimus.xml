<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="AnimalThingBase">
        <defName>BMT_Gallimimus</defName>
        <label>gallimimus</label>
        <description>A midsized dinosaur usually found in small herds. Can be used as a swift pack animal on caravans. Scientific name: Gallimimus bullatus</description>
        <statBases>
            <MoveSpeed>5.2</MoveSpeed>
            <MarketValue>620</MarketValue>
            <ComfyTemperatureMin>-15</ComfyTemperatureMin>
            <ComfyTemperatureMax>45</ComfyTemperatureMax>
            <FilthRate>16</FilthRate>
        </statBases>
        <race>
            <useMeatFrom>BMT_Velociraptor</useMeatFrom>
            <body>BMT_BipedWithClawsTeethAndTail</body>
            <leatherDef>BMT_DinoHideThin</leatherDef>
            <herdAnimal>true</herdAnimal>
            <baseBodySize>2.5</baseBodySize>
            <baseHealthScale>1.5</baseHealthScale>
            <baseHungerRate>0.535</baseHungerRate>
            <foodType>OmnivoreRoughAnimal, OvivoreAnimal</foodType>
            <predator>false</predator>
            <packAnimal>true</packAnimal>
            <wildness>0.50</wildness>
            <roamMtbDays>2</roamMtbDays>
            <lifeExpectancy>34</lifeExpectancy>
            <manhunterOnTameFailChance>0.02</manhunterOnTameFailChance>
            <manhunterOnDamageChance>0.02</manhunterOnDamageChance>
            <trainability>None</trainability>
            <lifeStageAges>
                <li>
                    <def>AnimalBabyTiny</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.25</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0.6</minAge>
                    <soundWounded>BMT_Gallimimus_Wounded</soundWounded>
                    <soundDeath>BMT_Gallimimus_Death</soundDeath>
                    <soundCall>BMT_Gallimimus_Call</soundCall>
                    <soundAngry>BMT_Gallimimus_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
        </race>
        <comps>
            <li Class="CompProperties_EggLayer">
                <eggFertilizedDef>BMT_GallimimusEggFertilized</eggFertilizedDef>
                <eggFertilizationCountMax>1</eggFertilizationCountMax>
                <eggLayIntervalDays>24</eggLayIntervalDays>
                <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
                <eggCountRange>1~1</eggCountRange>
            </li>
        </comps>
        <tools>
            <li>
                <label>front left claws</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>9.6</power>
                <cooldownTime>1.8</cooldownTime>
                <linkedBodyPartsGroup>FrontLeftClaws</linkedBodyPartsGroup>
            </li>
            <li>
                <label>front right claws</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>9.6</power>
                <cooldownTime>1.8</cooldownTime>
                <linkedBodyPartsGroup>FrontRightClaws</linkedBodyPartsGroup>
            </li>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>10</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.7</chanceFactor>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>12</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        <tradeTags>
            <li>AnimalUncommon</li>
        </tradeTags>
    </ThingDef>

