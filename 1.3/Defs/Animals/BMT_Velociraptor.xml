<?xml version="1.0" encoding="utf-8" ?>
<Defs>



  <ThingDef ParentName="AnimalThingBase">
    <defName>BMT_Velociraptor</defName>
    <label>velociraptor</label>
    <description>A small raptor with downy hide. It eats plants and small prey its also a good hunting pet, its down can be shed once a year.\n\nScientific name: Velociraptor mongoliensis</description>
    <statBases>
      <MoveSpeed>6</MoveSpeed>
      <MarketValue>450</MarketValue>
      <ComfyTemperatureMin>0</ComfyTemperatureMin>
      <ComfyTemperatureMax>65</ComfyTemperatureMax>
      <FilthRate>6</FilthRate>		  
    </statBases>

    <race>
	  <meatLabel>theropod meat</meatLabel>
	  <petness>1</petness>
	  <body>BMT_BipedWithClawsTeethAndTail</body>
      <leatherDef>BMT_DinoHideFeathery</leatherDef>
      <herdAnimal>true</herdAnimal>
      <baseBodySize>0.22</baseBodySize>
      <baseHealthScale>0.55</baseHealthScale>
      <baseHungerRate>0.50</baseHungerRate>
      <foodType>OmnivoreRoughAnimal</foodType>
	  <predator>true</predator>
      <maxPreyBodySize>0.5</maxPreyBodySize>
      <wildness>0.20</wildness>
      <lifeExpectancy>10</lifeExpectancy>
      <manhunterOnTameFailChance>0.010</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.010</manhunterOnDamageChance>
	  <nuzzleMtbHours>12</nuzzleMtbHours>
	  <nameOnTameChance>1</nameOnTameChance>
      <trainability>Intermediate</trainability>
	   <ageGenerationCurve>
        <points>
          <li>(0.0,0)</li>
          <li>(0.1,350)</li>
          <li>(0.9,150)</li>
          <li>(1.5,5)</li>
		  <li>(20,4)</li>
          <li>(65,0)</li>
        </points>
      </ageGenerationCurve>
	  <lifeStageAges>
        <li>
          <def>AnimalBabyTiny</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.11</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.25</minAge>
          <soundWounded>Pawn_MedDino_Angry</soundWounded>
          <soundDeath>Pawn_MedDino_Death</soundDeath>
          <soundCall>Pawn_MedDino_Call</soundCall>
          <soundAngry>Pawn_MedDino_Angry</soundAngry>
        </li>
      </lifeStageAges>
	  <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <comps>
	  
      <li Class="CompProperties_Shearable">
        <woolDef>BMT_DinoHideFeathery</woolDef>
        <shearIntervalDays>60</shearIntervalDays>
        <woolAmount>5</woolAmount>
      </li>
    
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>BMT_VelociraptorEggFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>3</eggFertilizationCountMax>
        <eggLayIntervalDays>15</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1~3</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>7</power>
        <cooldownTime>1.3</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftClaws</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>7</power>
        <cooldownTime>1.3</cooldownTime>
        <linkedBodyPartsGroup>FrontRightClaws</linkedBodyPartsGroup>
      </li>
     <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <tradeTags>
	   <li>AnimalPet</li>
	   <li>AnimalFighter</li>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>

