<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="PlantBase">
        <defName>BMT_Clubmoss</defName>
        <label>clubmoss</label>
        <description>Shrubby stands of clubmoss. They grow in clusters and slow down movement.</description>
        <statBases>
            <MaxHitPoints>90</MaxHitPoints>
            <Nutrition>0.25</Nutrition>
        </statBases>
        <pathCost>14</pathCost>
        <graphicData>
            <texPath>BMT_Prehistoric/Plant/Clubmoss</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        <hideAtSnowDepth>0.5</hideAtSnowDepth>
        <ingestible />
        <plant>
            <fertilitySensitivity>0.7</fertilitySensitivity>
            <growDays>3</growDays>
            <harvestWork>60</harvestWork>
            <maxMeshCount>4</maxMeshCount>
            <visualSizeRange>0.85~1.05</visualSizeRange>
            <topWindExposure>0.2</topWindExposure>
            <wildClusterRadius>3</wildClusterRadius>
            <wildClusterWeight>40</wildClusterWeight>
            <wildOrder>1</wildOrder>
            <wildEqualLocalDistribution>false</wildEqualLocalDistribution>
        </plant>
    </ThingDef>

</Defs>
