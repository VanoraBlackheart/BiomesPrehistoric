<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="TreeBase">
		<defName>BMT_CycadTree</defName>
		<label>Cycadales</label>
		<description>.</description>
		<graphicData>
			<texPath>BMT_Prehistoric/Plant/CycadTree</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.24, 0.35, 0.13)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<Beauty>1</Beauty>
			<Nutrition>1.25</Nutrition>
		</statBases>
		<ingestible />
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<fillPercent>0.20</fillPercent>
		<pathCost>30</pathCost>
		<plant>
			<dieIfLeafless>false</dieIfLeafless>
			<growDays>25</growDays>
			<visualSizeRange>0.8~2.0</visualSizeRange>
			<sowMinSkill>6</sowMinSkill>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<topWindExposure>0.15</topWindExposure>
			<mustBeWildToSow>true</mustBeWildToSow>
			<immatureGraphicPath>BMT_Prehistoric/Plant/CycadBush</immatureGraphicPath>
			<harvestWork>800</harvestWork>
			<harvestTag>Standard</harvestTag>
			<harvestYield>30</harvestYield>
			<harvestedThingDef>BMT_RawCycadNuts</harvestedThingDef>
			<harvestFailable>true</harvestFailable>
			<harvestAfterGrowth>0.30</harvestAfterGrowth>
			<purpose>Food</purpose>
		</plant>
	</ThingDef>

	<ThingDef ParentName="PlantFoodRawBase">
		<defName>BMT_RawCycadNuts</defName>
		<label>cycad nuts</label>
		<description>cycad nuts supply high amounds of food energy and are a rich source of numerous micronutrients. Their Roots and seeds are often populated by bacteria known to produce a neurotoxin.</description>
		<graphicData>
			<texPath>BMT_Prehistoric/Item/Resource/Raw/PineNuts</texPath>
		</graphicData>
		<statBases>
			<MarketValue>1.2</MarketValue>
			<Mass>0.009</Mass>
			<Nutrition>0.2</Nutrition>
		</statBases>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>28</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
		<ingestible>
			<preferability>RawTasty</preferability>
			<tasteThought></tasteThought>
			<foodType>VegetableOrFruit</foodType>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>ToxicBuildup</hediffDef>
					<severity>0.01</severity>
				</li>
			</outcomeDoers>
		</ingestible>
	</ThingDef>

</Defs>