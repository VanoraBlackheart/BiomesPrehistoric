<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Plants Expanded - More Plants</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BMT_Calamites"]/plant|
					Defs/ThingDef[defName="BMT_Horsetail"]/plant|
					Defs/ThingDef[defName="BMT_NypaFruticans"]/plant</xpath>
					<value>
						<sowTags>
							<li>VCE_Aquatic</li>
						</sowTags>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BMT_NypaFruticans"]/plant</xpath>
					<value>
						<sowTags>
							<li>VCE_Sandy</li>
						</sowTags>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>

