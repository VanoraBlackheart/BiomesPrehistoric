<Defs>



  <ThingDef ParentName="AnimalThingBase">
    <defName>BMT_Apatosaurus</defName>
    <label>apatosaurus</label>
    <description>A giant grazing animal with a long neck and a dangerous whip-like tail. When using their tail as a weapon they can produce cracking sounds as loud as a cannon firing.</description>
    <statBases>
      <MoveSpeed>5</MoveSpeed>
      <MarketValue>1220</MarketValue>
      <ComfyTemperatureMin>-15</ComfyTemperatureMin>
      <ComfyTemperatureMax>40</ComfyTemperatureMax>
      <FilthRate>15</FilthRate>	 	  
    </statBases>
    <race>
	  <body>QuadrupedAnimalWithPawsAndTail</body>
      <leatherDef>BMT_DinoHideHeavy</leatherDef>
      <herdAnimal>true</herdAnimal>
      <baseBodySize>4.8</baseBodySize>
      <baseHealthScale>3</baseHealthScale>
      <baseHungerRate>0.755</baseHungerRate>
      <packAnimal>true</packAnimal>
      <foodType>VegetarianRoughAnimal, DendrovoreAnimal</foodType>
	  <predator>false</predator>
      <wildness>0.60</wildness>
      <roamMtbDays>2.5</roamMtbDays>	  
      <lifeExpectancy>80</lifeExpectancy>
      <manhunterOnTameFailChance>0.30</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.70</manhunterOnDamageChance>
      <trainability>None</trainability>
	  <lifeStageAges>
        <li>
          <def>AnimalBabyTiny</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>1</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>2</minAge>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>BMT_ApatosaurusEggFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>45</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1~1</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>front left foot</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>13</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
      </li>
      <li>
        <label>front right foot</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>13</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
      </li>
     <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>16</power>
        <cooldownTime>2.5</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>20</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
  </ThingDef>

