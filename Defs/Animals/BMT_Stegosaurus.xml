      <MarketValue>360</MarketValue>
      <ComfyTemperatureMin>-20</ComfyTemperatureMin>
      <ComfyTemperatureMax>40</ComfyTemperatureMax>
      <FilthRate>17</FilthRate>	 	  
    </statBases>
    <race>
	  <body>QuadrupedAnimalWithPawsAndTail</body>
      <leatherDef>BMT_DinoHideThin</leatherDef>
      <herdAnimal>true</herdAnimal>
      <baseBodySize>2.8</baseBodySize>
      <baseHealthScale>1.8</baseHealthScale>
      <baseHungerRate>0.6</baseHungerRate>
      <foodType>VegetarianRoughAnimal, DendrovoreAnimal</foodType>
	  <predator>false</predator>
      <wildness>0.20</wildness>
      <roamMtbDays>2</roamMtbDays>	  
      <lifeExpectancy>60</lifeExpectancy>
      <manhunterOnTameFailChance>0.10</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.20</manhunterOnDamageChance>
      <trainability>None</trainability>
      <ageGenerationCurve>
        <points>
          <li>(0.0,0)</li>
          <li>(0.1,350)</li>
          <li>(0.9,150)</li>
          <li>(1.5,5)</li>
		  <li>(20,4)</li>
          <li>(65,0)</li>
        </points>
      </ageGenerationCurve>
	  <lifeStageAges>
        <li>
          <def>AnimalBabyTiny</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.6</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>1.5</minAge>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>BMT_StegosaurusEggFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>30</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1~1</eggCountRange>
      </li>
    </comps>
    <tools>
      <li>
        <label>front left foot</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
      </li>
      <li>
        <label>front right foot</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
      </li>
     <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2.5</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
