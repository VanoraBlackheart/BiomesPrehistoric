	<ThingDef MayRequire="biomesteam.oasis" ParentName="EggFertBase">
		<defName>BMT_BladecrestEggFertilized</defName>
		<label>bladecrest egg (fert.)</label>
		<description>A fertilized bladecrest egg. If all goes well, it should hatch into a baby bladecrest. It can be eaten raw, but it's much better cooked.</description>
		<graphicData>
			<texPath>BMT_Prehistoric/Item/Egg/DinoOvoidEgg</texPath>
			<color>(152,95,81)</color>
			<drawSize>1.1</drawSize>
		</graphicData>
		<statBases>
			<Nutrition>0.65</Nutrition>
			<MarketValue>61</MarketValue>
		</statBases>
		<comps>
			<li Class="CompProperties_Hatcher">
				<hatcherDaystoHatch>6</hatcherDaystoHatch>
				<hatcherPawn>BMT_Bladecrest</hatcherPawn>
			</li>
		</comps>
	</ThingDef>

