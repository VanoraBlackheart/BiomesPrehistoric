	<ThingDef MayRequire="biomesteam.oasis" ParentName="AnimalThingBase">
		<defName>BMT_Bladecrest</defName>
		<label>bladecrest</label>
		<description>Bladecrests are a predator that can be found in the Chromatic Oasis, using their razor shard crests to slash at their prey.\n\nScientific name: Pteranodon ferrumcalvaria</description>
		<uiIconScale>1.5</uiIconScale>
		<statBases>
			<BiomesCore_FlySpeed>20</BiomesCore_FlySpeed>
			<SwimSpeed>1</SwimSpeed>
			<MarketValue>1050</MarketValue>
			<ComfyTemperatureMin>-25</ComfyTemperatureMin>
			<ComfyTemperatureMax>60</ComfyTemperatureMax>
		</statBases>
		<race>
			<useMeatFrom>BMT_Pteranodon</useMeatFrom>
			<leatherDef>BMT_DinoHideThin</leatherDef>
			<herdAnimal>true</herdAnimal>
			<predator>true</predator>
			<maxPreyBodySize>1.2</maxPreyBodySize>
			<baseBodySize>2.6</baseBodySize>
			<baseHealthScale>1.0</baseHealthScale>
			<baseHungerRate>0.8</baseHungerRate>
			<foodType>CarnivoreAnimal</foodType>
			<wildness>0.55</wildness>
			<trainability>Advanced</trainability>
			<lifeExpectancy>30</lifeExpectancy>
			<manhunterOnTameFailChance>0.45</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0.60</manhunterOnDamageChance>
			<body>Bird</body>
			<gestationPeriodDays>12</gestationPeriodDays>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
			<wildBiomes>
				<!-- <BMT_ChromaticOasis>110.7</BMT_ChromaticOasis> -->
				<BMT_ChromaticOasis>0.8</BMT_ChromaticOasis>
			</wildBiomes>
			<ageGenerationCurve>
				<points>
					<li>(0.0,0)</li>
					<li>(0.1,350)</li>
					<li>(0.9,150)</li>
					<li>(1.5,5)</li>
					<li>(20,4)</li>
					<li>(65,0)</li>
				</points>
			</ageGenerationCurve>
			<lifeStageAges>
				<li>
					<def>BMT_BladecrestBabyTiny</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>BMT_BladecrestJuvenile</def>
					<minAge>0.7</minAge>
				</li>
				<li>
					<def>BMT_BladecrestAdult</def>
					<minAge>1.3</minAge>
					<soundWounded>BMT_Pteranodon_Wounded</soundWounded>
					<soundDeath>BMT_Pteranodon_Death</soundDeath>
					<soundCall>BMT_Pteranodon_Call</soundCall>
					<soundAngry>BMT_Pteranodon_Angry</soundAngry>
				</li>
			</lifeStageAges>
		</race>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>BMT_BladecrestEggFertilized</eggFertilizedDef>
				<eggFertilizationCountMax>3</eggFertilizationCountMax>
				<eggLayIntervalDays>12</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>1~3</eggCountRange>
			</li>
		</comps>
		<tools>
			<li>
				<label>claws</label>
				<capacities>
					<li>Scratch</li>
				</capacities>
				<power>5.2</power>
				<cooldownTime>3</cooldownTime>
				<chanceFactor>0.2</chanceFactor>
				<linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>18</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>beak</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>19</power>
				<cooldownTime>1.5</cooldownTime>
				<linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
				<chanceFactor>0.2</chanceFactor>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>15</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Cut</li>
					<li>Stab</li>
				</capacities>
				<power>28</power>
				<cooldownTime>1.8</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>1.0</chanceFactor>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>12</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
		</tools>
		<tradeTags>
			<li>AnimalUncommon</li>
		</tradeTags>
		<!-- <butcherProducts> -->
			<!-- <BMT_BladecrestBlade>1</BMT_BladecrestBlade> -->
		<!-- </butcherProducts> -->
	</ThingDef>

