			<graphicClass>Graphic_Random</graphicClass>
			<texPath>BiomesIslands_Things/Plant/SeaSponge</texPath>
		</graphicData>
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<terrainTags>
					<li>Water</li>
					<li>Salty</li>
					<li>Shallow</li>
