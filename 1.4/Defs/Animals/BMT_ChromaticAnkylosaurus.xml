            </rulesFiles>
            <rulesStrings>
                <li>physical_description_root->[BMT_EggDescription]</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>BMT_NamerArtEgg</defName>
        <rulePack>
            <rulesFiles>
                <li>BMT_NameDino->Names/BMT_Egg</li>
            </rulesFiles>
            <rulesStrings>
                <li>r_name(p=6)->[BMT_Egg]</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

</Defs>