<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <BiomeDef Name="BMT_TertiaryIslandBase" Abstract="True">
    <!-- Tundra Island -->
    <defName>BMT_TertiaryIslandBase</defName>
    <label>tertiary island</label>
    <description>An island from the tertiary period.</description>
    <workerClass>BiomesKit.UniversalBiomeWorker</workerClass>
    <canAutoChoose>false</canAutoChoose>
    <allowRoads>false</allowRoads>
    <allowRivers>false</allowRivers>
    <animalDensity>1.8</animalDensity>
    <plantDensity>0.19</plantDensity>
    <settlementSelectionWeight>0.01</settlementSelectionWeight>
    <movementDifficulty>2</movementDifficulty>
    <texture>World/Biomes/Ocean</texture>
    <forageability>0.5</forageability>
    <foragedFood>RawBerries</foragedFood>
    <wildPlantRegrowDays>25</wildPlantRegrowDays>
    <soundsAmbient>
      <li>Ambient_NightInsects_Standard</li>
    </soundsAmbient>
    <diseaseMtbDays>80</diseaseMtbDays>
    <diseases>
      <li>
        <diseaseInc>Disease_Flu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_Plague</diseaseInc>
        <commonality>80</commonality>
      </li>
      <li>
        <diseaseInc>Disease_FibrousMechanites</diseaseInc>
        <commonality>40</commonality>
      </li>
      <li>
        <diseaseInc>Disease_SensoryMechanites</diseaseInc>
        <commonality>40</commonality>
      </li>
      <li>
        <diseaseInc>Disease_GutWorms</diseaseInc>
        <commonality>30</commonality>
      </li>
      <li>
        <diseaseInc>Disease_MuscleParasites</diseaseInc>
        <commonality>30</commonality>
      </li>
      <li>
        <diseaseInc>Disease_AnimalFlu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_AnimalPlague</diseaseInc>
        <commonality>80</commonality>
      </li>
    </diseases>
    <terrainsByFertility>
      <li>
        <terrain>WaterOceanDeep</terrain>
        <min>-999</min>
        <max>0.65</max>
      </li>
      <li>
        <terrain>WaterOceanShallow</terrain>
        <min>0.65</min>
        <max>1.0</max>
      </li>
      <li>
        <terrain>BiomesCore_Pebbles</terrain>
        <min>1.0</min>
        <max>3.0</max>
      </li>
      <li>
        <terrain>Soil</terrain>
        <min>3.0</min>
        <max>999</max>
      </li>
    </terrainsByFertility>
    <terrainPatchMakers>
      <li>
        <perlinFrequency>0.020</perlinFrequency>
        <minFertility>3.0</minFertility>
        <thresholds>
          <li>
            <terrain>MossyTerrain</terrain>
            <min>0.0</min>
            <max>0.52</max>
          </li>
          <li>
            <terrain>Marsh</terrain>
            <min>0.52</min>
            <max>0.85</max>
          </li>
          <li>
            <terrain>WaterShallow</terrain>
            <min>0.85</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
      <li>
        <perlinFrequency>0.035</perlinFrequency>
        <minFertility>3.0</minFertility>
        <thresholds>
          <li>
            <terrain>MossyTerrain</terrain>
            <min>-999</min>
            <max>-.5</max>
          </li>
          <li>
            <terrain>SoilRich</terrain>
            <min>0.55</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
    </terrainPatchMakers>
    <baseWeatherCommonalities>
      <Clear>18</Clear>
      <Fog>1</Fog>
      <Rain>2</Rain>
      <DryThunderstorm>1</DryThunderstorm>
      <RainyThunderstorm>1</RainyThunderstorm>
      <FoggyRain>1</FoggyRain>
      <SnowGentle>4</SnowGentle>
      <SnowHard>4</SnowHard>
    </baseWeatherCommonalities>
    <wildPlants>
      <!-- land plants -->
      <BMT_Grass>3.6</BMT_Grass>
      <BMT_Moss>0.5</BMT_Moss>
      <BMT_Bush>0.2</BMT_Bush>
      <BMT_Potentilla>0.1</BMT_Potentilla>
      <BMT_Artemisia>0.1</BMT_Artemisia>
      <BMT_TreePine>0.08</BMT_TreePine>
      <BMT_TreeBirch>0.08</BMT_TreeBirch>
      <BMT_RubusChamaemorus>0.07</BMT_RubusChamaemorus>
      <BMT_HealrootFern>0.05</BMT_HealrootFern>
      <!-- water plants -->

    </wildPlants>
    <wildAnimals>
      <!-- Prehistoric terrestrial -->
      <BMT_Borealopelta>0.5</BMT_Borealopelta>
      <BMT_Homalocephale>0.05</BMT_Homalocephale>
      <BMT_Leaellynasaura>0.8</BMT_Leaellynasaura>
      <BMT_Ouranosaurus>0.3</BMT_Ouranosaurus>
      <BMT_Polacanthus>0.5</BMT_Polacanthus>
      <BMT_Struthiomimus>0.2</BMT_Struthiomimus>
      <BMT_Therizinosaurus>0.1</BMT_Therizinosaurus>
      <BMT_Timimus>0.5</BMT_Timimus>
      <BMT_Yutyrannus>0.1</BMT_Yutyrannus>
      <!-- Prehistoric aquatic -->
      <BMT_Elasmosaurus>0.3</BMT_Elasmosaurus>
      <BMT_Liopleurodon>0.4</BMT_Liopleurodon>
      <BMT_Mosasaurus>0.5</BMT_Mosasaurus>  
      <BMT_Pteranodon>0.3</BMT_Pteranodon>
      <BMT_Shonisaurus>0.3</BMT_Shonisaurus>
      <BMT_Trilobite>0.5</BMT_Trilobite>
    </wildAnimals>
    <allowedPackAnimals>
      <li>BMT_Borealopelta</li>
      <li>BMT_Ouranosaurus</li>
    </allowedPackAnimals>
  </BiomeDef>
  <BiomeDef ParentName="BMT_TertiaryIslandBase">
    <defName>BMT_TertiaryIsland</defName>
    <label>tertiary island</label>
    <workerClass>BiomesKit.UniversalBiomeWorker</workerClass>
    <modExtensions>
      <li Class="BiomesCore.DefModExtensions.BiomesMap">
        <isIsland>true</isIsland>
        <hasScatterables>true</hasScatterables>
        <allowBeach>false</allowBeach>
        <islandShapes>
          <li>Smooth</li>
          <li>Rough</li>
          <li>Crescent</li>
          <li>Pair</li>
        </islandShapes>
      </li>
      <li Class="BiomesKit.BiomesKitControls">
        <setHills>Random</setHills>
        <usePerlin>true</usePerlin>
        <perlinCulling>0.80</perlinCulling>
        <allowOnWater>true</allowOnWater>
        <allowOnLand>False</allowOnLand>
        <maxTemperature>0</maxTemperature>
        <minTemperature>-22</minTemperature>
        <maxRainfall>1000</maxRainfall>
        <frequency>20</frequency>
        <materialPath>BiomesIslands_World/MapGraphics/TundraIsland</materialPath>
        <materialLayer>3509</materialLayer>
      </li>
    </modExtensions>
  </BiomeDef>
  <BiomeDef ParentName="BMT_MammothSteppeIslandBase">
    <defName>BMT_TertiaryArchipelago</defName>
    <label>tertiary archipelago</label>
    <workerClass>BiomesKit.UniversalBiomeWorker</workerClass>
    <modExtensions>
      <li Class="BiomesCore.DefModExtensions.BiomesMap">
        <isIsland>true</isIsland>
        <hasScatterables>true</hasScatterables>
        <allowBeach>false</allowBeach>
        <islandShapes>
          <li>Cluster</li>
        </islandShapes>
      </li>
      <li Class="BiomesKit.BiomesKitControls">
        <spawnOnBiomes>
          <li>BMT_TertiaryIsland</li>
        </spawnOnBiomes>
        <allowOnWater>True</allowOnWater>
        <frequency>70</frequency>
        <biomePriority>2</biomePriority>
        <materialPath>BiomesIslands_World/MapGraphics/TundraArchipelago</materialPath>
        <materialLayer>3509</materialLayer>
      </li>
    </modExtensions>
  </BiomeDef>
</Defs>