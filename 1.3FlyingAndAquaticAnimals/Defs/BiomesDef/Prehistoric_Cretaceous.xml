  <BiomeDef ParentName="BiomesIslands_ColdBogIslandBase">
    <defName>BiomesIslands_ColdBogIsland</defName>
    <label>cretaceous island</label>
    <workerClass>BiomesKit.UniversalBiomeWorker</workerClass>
    <modExtensions>
      <li Class="BiomesCore.DefModExtensions.BiomesMap">
        <isIsland>true</isIsland>
        <hasScatterables>true</hasScatterables>
        <allowBeach>false</allowBeach>
        <islandShapes>
          <li>Smooth</li>
          <li>Rough</li>
          <li>Crescent</li>
          <li>Pair</li>
        </islandShapes>
      </li>
      <li Class="BiomesKit.BiomesKitControls">
        <setHills>Random</setHills>
        <usePerlin>true</usePerlin>
        <perlinCulling>0.80</perlinCulling>
        <allowOnWater>true</allowOnWater>
        <allowOnLand>False</allowOnLand>
        <minTemperature>-10</minTemperature>
        <maxTemperature>5</maxTemperature>
        <minRainfall>400</minRainfall>
        <frequency>20</frequency>
        <materialPath>BiomesIslands_World/MapGraphics/BorealIsland</materialPath>
        <materialLayer>3509</materialLayer>
      </li>
    </modExtensions>
  </BiomeDef>

  <BiomeDef ParentName="BiomesIslands_ColdBogIslandBase">
    <defName>BiomesIslands_ColdBogArchipelago</defName>
    <label>cretaceous Archipelago</label>
    <workerClass>BiomesKit.UniversalBiomeWorker</workerClass>
    <modExtensions>
      <li Class="BiomesCore.DefModExtensions.BiomesMap">
        <isIsland>true</isIsland>
        <hasScatterables>true</hasScatterables>
        <allowBeach>false</allowBeach>
        <islandShapes>
          <li>Cluster</li>
        </islandShapes>
      </li>
      <li Class="BiomesKit.BiomesKitControls">
        <spawnOnBiomes>
          <li>BiomesIslands_ColdBogIsland</li>
        </spawnOnBiomes>
        <allowOnWater>True</allowOnWater>
        <frequency>70</frequency>
        <biomePriority>2</biomePriority>
        <materialPath>BiomesIslands_World/MapGraphics/BorealArchipelago</materialPath>
        <materialLayer>3509</materialLayer>
      </li>
    </modExtensions>
  </BiomeDef>
