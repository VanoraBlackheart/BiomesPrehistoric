<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <BiomeDef Name="BMT_CretaceousIslandBase" Abstract="True">
    <!-- Cold Bog Island -->
    <defName>BMT_CretaceousIslandBase</defName>
    <label>cretaceous island</label>
    <description>An island from the cretaceous period.</description>
    <workerClass>BiomesKit.UniversalBiomeWorker</workerClass>
    <canAutoChoose>false</canAutoChoose>
    <allowRoads>false</allowRoads>
    <allowRivers>false</allowRivers>
    <animalDensity>3.2</animalDensity>
    <plantDensity>0.5</plantDensity>
    <settlementSelectionWeight>0.01</settlementSelectionWeight>
    <movementDifficulty>2</movementDifficulty>
    <texture>World/Biomes/Ocean</texture>
    <forageability>1</forageability>
    <foragedFood>BMT_RawPineNuts</foragedFood>
    <wildPlantRegrowDays>12</wildPlantRegrowDays>
    <soundsAmbient>
      <li>Ambient_NightInsects_Standard</li>
    </soundsAmbient>
    <diseaseMtbDays>50</diseaseMtbDays>
    <diseases>
      <li>
        <diseaseInc>Disease_Flu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_Plague</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_GutWorms</diseaseInc>
        <commonality>50</commonality>
      </li>
      <li>
        <diseaseInc>Disease_FibrousMechanites</diseaseInc>
        <commonality>30</commonality>
      </li>
      <li>
        <diseaseInc>Disease_SensoryMechanites</diseaseInc>
        <commonality>30</commonality>
      </li>
      <li>
        <diseaseInc>Disease_MuscleParasites</diseaseInc>
        <commonality>50</commonality>
      </li>
      <li>
        <diseaseInc>Disease_AnimalFlu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_AnimalPlague</diseaseInc>
        <commonality>100</commonality>
      </li>
    </diseases>
    <terrainsByFertility>
      <li>
        <terrain>WaterOceanDeep</terrain>
        <min>-999</min>
        <max>0.65</max>
      </li>
      <li>
        <terrain>WaterOceanShallow</terrain>
        <min>0.65</min>
        <max>1.0</max>
      </li>
      <li>
        <terrain>BiomesCore_Pebbles</terrain>
        <min>1.0</min>
        <max>3.0</max>
      </li>
      <li>
        <terrain>Soil</terrain>
        <min>3.0</min>
        <max>999</max>
      </li>
    </terrainsByFertility>
    <terrainPatchMakers>
      <li>
        <perlinFrequency>0.022</perlinFrequency>
        <minFertility>3.0</minFertility>
        <thresholds>
          <li>
            <terrain>MossyTerrain</terrain>
            <min>0.0</min>
            <max>0.48</max>
          </li>
          <li>
            <terrain>Marsh</terrain>
            <min>0.48</min>
            <max>0.80</max>
          </li>
          <li>
            <terrain>WaterShallow</terrain>
            <min>0.80</min>
            <max>1.05</max>
          </li>
          <li>
            <terrain>WaterDeep</terrain>
            <min>1.05</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
      <li>
        <perlinFrequency>0.030</perlinFrequency>
        <minFertility>3.0</minFertility>
        <thresholds>
          <li>
            <terrain>SoilRich</terrain>
            <min>0.50</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
    </terrainPatchMakers>
    <baseWeatherCommonalities>
      <Clear>18</Clear>
      <Fog>1</Fog>
      <Rain>2</Rain>
      <DryThunderstorm>1</DryThunderstorm>
      <RainyThunderstorm>1</RainyThunderstorm>
      <FoggyRain>1</FoggyRain>
      <SnowGentle>4</SnowGentle>
      <SnowHard>4</SnowHard>
    </baseWeatherCommonalities>
    <wildPlants>
      <!-- land plants -->
      <BMT_Lindsaeaceae>3.0</BMT_Lindsaeaceae>
      <BMT_PolarGrass>8.0</BMT_PolarGrass>
      <BMT_PolarMoss>4.0</BMT_PolarMoss>
      <BMT_Podocarpaceae>3.0</BMT_Podocarpaceae>
      <BMT_Archaefructus>0.1</BMT_Archaefructus>
      <BMT_Ginkgo>5.0</BMT_Ginkgo>
      <BMT_Metasequoia>1.5</BMT_Metasequoia>
      <BMT_Caytoniales>1.2</BMT_Caytoniales>
      <BMT_Taxaceae>0.16</BMT_Taxaceae>
      <BMT_HealrootFern>0.16</BMT_HealrootFern>
      <!-- water plants -->

    </wildPlants>
    <wildAnimals>
      <!-- Prehistoric terrestrial -->
      <BMT_Borealopelta>0.5</BMT_Borealopelta>
      <BMT_Homalocephale>0.05</BMT_Homalocephale>
      <BMT_Leaellynasaura>0.8</BMT_Leaellynasaura>
      <BMT_Ouranosaurus>0.3</BMT_Ouranosaurus>
      <BMT_Polacanthus>0.5</BMT_Polacanthus>
      <BMT_Struthiomimus>0.2</BMT_Struthiomimus>
      <BMT_Therizinosaurus>0.1</BMT_Therizinosaurus>
      <BMT_Timimus>0.5</BMT_Timimus>
      <BMT_Yutyrannus>0.1</BMT_Yutyrannus>
      <!-- Prehistoric aquatic -->
      <BMT_Dimorphodon>0.2</BMT_Dimorphodon>
      <BMT_Elasmosaurus>0.3</BMT_Elasmosaurus>
      <BMT_Icthyosaurus>0.3</BMT_Icthyosaurus>
      <BMT_Liopleurodon>0.4</BMT_Liopleurodon>
      <BMT_Mosasaurus>0.5</BMT_Mosasaurus>  
      <BMT_Pteranodon>0.5</BMT_Pteranodon>
      <BMT_Shonisaurus>0.3</BMT_Shonisaurus>
      <BMT_Trilobite>0.5</BMT_Trilobite>
    </wildAnimals>
    <allowedPackAnimals>
      <li>BMT_Borealopelta</li>
      <li>BMT_Ouranosaurus</li>
    </allowedPackAnimals>
  </BiomeDef>
  <BiomeDef ParentName="BMT_CretaceousIslandBase">
    <defName>BMT_CretaceousIsland</defName>
    <label>cretaceous island</label>
    <workerClass>BiomesKit.UniversalBiomeWorker</workerClass>
    <modExtensions>
      <li Class="BiomesCore.DefModExtensions.BiomesMap">
        <isIsland>true</isIsland>
        <hasScatterables>true</hasScatterables>
        <allowBeach>false</allowBeach>
        <islandShapes>
          <li>Smooth</li>
          <li>Rough</li>
          <li>Crescent</li>
          <li>Pair</li>
        </islandShapes>
      </li>
      <li Class="BiomesKit.BiomesKitControls">
        <setHills>Random</setHills>
        <usePerlin>true</usePerlin>
        <perlinCulling>0.80</perlinCulling>
        <allowOnWater>true</allowOnWater>
        <allowOnLand>False</allowOnLand>
        <minTemperature>-10</minTemperature>
        <maxTemperature>5</maxTemperature>
        <minRainfall>400</minRainfall>
        <frequency>20</frequency>
        <materialPath>BiomesIslands_World/MapGraphics/BorealIsland</materialPath>
        <materialLayer>3509</materialLayer>
      </li>
    </modExtensions>
  </BiomeDef>
  <BiomeDef ParentName="BMT_CretaceousIslandBase">
    <defName>BMT_CretaceousIslandArchipelago</defName>
    <label>cretaceous archipelago</label>
    <workerClass>BiomesKit.UniversalBiomeWorker</workerClass>
    <modExtensions>
      <li Class="BiomesCore.DefModExtensions.BiomesMap">
        <isIsland>true</isIsland>
        <hasScatterables>true</hasScatterables>
        <allowBeach>false</allowBeach>
        <islandShapes>
          <li>Cluster</li>
        </islandShapes>
      </li>
      <li Class="BiomesKit.BiomesKitControls">
        <spawnOnBiomes>
          <li>BMT_CretaceousIsland</li>
        </spawnOnBiomes>
        <allowOnWater>True</allowOnWater>
        <frequency>70</frequency>
        <biomePriority>2</biomePriority>
        <materialPath>BiomesIslands_World/MapGraphics/BorealArchipelago</materialPath>
        <materialLayer>3509</materialLayer>
      </li>
    </modExtensions>
  </BiomeDef>
</Defs>